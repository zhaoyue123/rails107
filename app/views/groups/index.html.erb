<div class="col-md-12">
  <div class="group">
    <%= link_to("New group", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Creator</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |groups| %>
        <tr>
          <td>#</td>
          <td><%= link_to(groups.title, group_path(groups)) %></td>
          <td><%= groups.description %></td>

          <td><%= groups.user(:email) %></td>
          <td>
              <%= link_to("Edit", edit_group_path(groups), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", group_path(groups),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
